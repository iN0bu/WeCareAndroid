<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pulusata.wecarefouru.ModiferProfil" >

    <Button
        android:id="@+id/get_contact"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/light_gray_header_color"
        android:onClick="pickContact"
        android:layout_margin="5dp"
        android:text="@string/pick_contact"
        android:textSize="22sp" />

    <ScrollView android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <ListView
            android:id="@android:id/list"
            android:background="@android:color/white"
            android:divider="@android:color/black"
            android:dividerHeight="3dp"
            android:layout_margin="3dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </ScrollView>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/prenom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="Prénom"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textMultiLine" >
        </EditText>

        <EditText
            android:id="@+id/nom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="Nom"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textMultiLine" >
        </EditText>

        <EditText
            android:id="@+id/telephone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="N° de téléphone"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textMultiLine" >
        </EditText>

        <EditText
            android:id="@+id/contrat"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="N° de contrat d'assurance"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textMultiLine" >
        </EditText>

        <EditText
            android:id="@+id/infosmedicales"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="Informations médicales"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="textMultiLine" >
        </EditText>

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="save"
            android:background="@color/rounded_container_bg"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Save"/>
    </LinearLayout>


</LinearLayout>
